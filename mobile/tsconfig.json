{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/theme": [
        "./src/constants/theme.ts"
      ],
      "@/assets/*": [
        "./src/assets/*"
      ],
      "@/icons": [
        "./src/constants/icons.ts"
      ],
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
